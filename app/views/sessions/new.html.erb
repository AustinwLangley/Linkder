
    <div class="ui form">
       <h1>Log In</h1>

      <%= form_for :login do |f| %>
       
    <% if flash[:danger] %>
      <h4 class="bg-danger flash"><%= flash[:danger] %></h4>
    <% end %>

        <div class="field">
          <%= f.label :email, "Email " %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.submit "Log In", class: "btn btn-primary" %>
        </div>

      <% end %>
      
    </div>


